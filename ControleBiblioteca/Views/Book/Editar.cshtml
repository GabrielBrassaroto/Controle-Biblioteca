@{
    ViewData["Title"] = "Editar Livro";
}
<div class="text-center">

    <h1 class="display-4">Editar Livro</h1>

</div>
<form>
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" placeholder="Digite Nome">
    </div>
    <div class="form-group">
        <label for="autor">Autor</label>
        <input type="text" class="form-control" placeholder="Digite Autor">
    </div>
    <div class="form-group">
        <label for="ano">Ano de lançamento</label>
        <input type="text" class="form-control" placeholder="Digite Ano de lançamento">
    </div>
    <button type="submit" class="btn btn-primary btn-block">Alterar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Livro" asp-action="Index" role="button">
        voltar
    </a>
</form>