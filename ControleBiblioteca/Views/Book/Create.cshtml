@model BookModel

@{
    ViewData["Title"] = "Criar Livro";
}
<div class="text-center">

    <h1 class="display-4">Cadastro de Livros</h1>

</div>
<form asp-controller="Book" asp-action="Create" method="post">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Digite Nome">
    </div>
    <div class="form-group">
        <label for="autor">Autor</label>
        <input type="text"  asp-for="Author" class="form-control" placeholder="Digite Autor">
    </div>
    <div class="form-group">
        <label for="ano">Editora</label>
        <input type="text" asp-for="PublishingCompany" class="form-control" placeholder="Digite Ano de lançamento">
    </div>
    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Livro" asp-action="Index" role="button">
        voltar
    </a>
</form>