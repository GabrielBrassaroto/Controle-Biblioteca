@model List<BookModel>
@{
    ViewData["Title"] = "Listagem de Livros";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Book" asp-action="Create">Adicionar Novo Livro</a>
    </div>
    <br />
    <h1 class="display-4">Listagem de Livros</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Autor</th>
                <th scope="col">Assunto</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (BookModel book in Model)
                {
                    <tr>
                        <th scope="row">@book.Id</th>
                        <td>@book.Name</td>
                        <td>@book.Author</td>
                        <td>@book.PublishingCompany</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-outline-primary"  asp-route-id="@book.Id" asp-controller="Book" asp-action="Edit">Editar</a>
                                <a role="button" class="btn btn-outline-primary"asp-route-id="@book.Id asp-controller="Book" asp-action="ExcluirConfirmacao">Excluir</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
